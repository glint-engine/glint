    "version": "0.2.0",
    "configurations": [
        {
            "name": "XMake Debug",
            "type": "xmake",
            "request": "launch",
            "target": "muen",
            "stopAtEntry": true,
            "args": [
                "${workspaceFolder}/examples/${input:game}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "game",
            "type": "promptString",
            "description": "Name pf the game to process",
            "default": "balls"
        }
    ]
}